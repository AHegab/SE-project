<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="icon" type="favIcon.jpg" href="https://i.pinimg.com/originals/46/0d/5f/460d5f3ccb4383f499a8a637b263e41d.jpg">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://fonts.cdnfonts.com/css/911-porscha" rel="stylesheet">
    <link rel="icon" type="favIcon.jpg" href="Images\favIcon.jpg">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- react -->
    <div id="react-root"></div>
    <link rel="stylesheet" href="styleHomePage.css">
    <title>Welcome to Porsche</title>
</head>
<body>
    <a id="porsche-text" href="/">Porsche</a>
    <h1 id="Home-text">Home</h1>
    <div class="wrapper">
        <!-- Sidebar -->
        <aside id="sidebar">
            <div class="h-100">
                <div id="Dashboard" class="sidebar-logo">
                    <a href="#">Dashboard</a>
                </div>
                <!-- Sidebar Navigation -->
                <ul class="sidebar-nav">
                    <li class="sidebar-item">
                        <a href="/" class="sidebar-link">
                            <i class="fa-solid fa-home pe-2"></i> <!-- Using the home icon -->
                            Home
                        </a>
                    </li>
                    <% if (userId) { %>
                        <li class="sidebar-item">
                            <a href="/v1/api/users/profile" class="sidebar-link">
                                <i class="fa-regular fa-user pe-2"></i>
                                Profile
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/ContactUs" class="sidebar-link">
                                <i class="fa-regular fa-file-lines pe-2"></i>
                                Contact us
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/about" class="sidebar-link">
                                <i class="fa-solid fa-sliders pe-2"></i>
                                About us
                            </a>
                        </li>
                    <% } else { %>
                        <li class="sidebar-item">
                            <a href="/login" class="sidebar-link">
                                <i class="fa-regular fa-user pe-2"></i>
                                Login
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/ContactUs" class="sidebar-link">
                                <i class="fa-regular fa-file-lines pe-2"></i>
                                Contact us
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a href="/about" class="sidebar-link">
                                <i class="fa-solid fa-sliders pe-2"></i>
                                About us
                            </a>
                        </li>
                    <% } %>
                    
                </ul>
            </div>
        </aside>
        <!-- Main Component -->
        <div class="main">
            <nav class="navbar navbar-expand px-3 border-bottom">
                <!-- Button for sidebar toggle -->
                <button class="btn" type="button" data-bs-theme="dark">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </nav>
        </div>
    </div>

    <div class="container experience-container">
        <h1>Begin Your</h1>
        <h2>Experience</h2>
    </div>

    <!-- <div class="sign-in-container" id="signin-container">
        <a href="loginPage.html" class="btn btn-primary custom-signin-btn">Sign In</a>
    </div> -->
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script>
        // Check if cookie "info" exists
        if(document.cookie.includes("info")) {
            // If cookie exists, remove the sign-in container
            var signInContainer = document.getElementById("signin-container");
            signInContainer.parentNode.removeChild(signInContainer);

            // Also remove the login link from the navbar
            var loginLink = document.querySelector(".sidebar-nav a[href='profile.html']");
            loginLink.parentNode.removeChild(loginLink);
        }

        const toggler = document.querySelector(".btn");
        toggler.addEventListener("click",function(){
            document.querySelector("#sidebar").classList.toggle("collapsed");
        });
    </script>
    
</body>
</html>
